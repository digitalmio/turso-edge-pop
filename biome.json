{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "javascript": {
    "jsxRuntime": "reactClassic"
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 80,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      }
    }
  },
  "files": {
    "ignore": [
      "**/tsconfig.json",
      "**/tsconfig.*.json",
      "**/dist/**/*",
      "**/coverage/**/*",
      "**/*.gen.ts",
      "package.json",
      ".vscode/*"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  }
}
